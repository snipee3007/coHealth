extend base

block body
    .containerScreen
        .flex
            .m-8(class="w-1/2")
                p.font-ABeeZee.text-2xl List of Hospital
            .m-8(class="w-1/2")
                p.font-ABeeZee.text-2xl Map
        .flex.justify-center.mb-10
            .border-4.overflow-y-scroll(class='w-1/2 h-[600px]')
                each hospital in hospitals
                    //- .border-8
                    .border-8(id=hospital.name)
                        img(src=`${hospital.image}` class='h-64' alt="1").w-full.object-cover
                        .flex.justify-between
                            .py-4.px-3
                                .title.font-Roboto.text-xl.font-bold #{hospital.name}
                                .description.truncate-3.text-justify.font-Roboto(class='text-[#6F7CB2]') Address: #{hospital.address}
                                a.description.truncate-3.text-justify.font-Roboto(class='text-[#6F7CB2]' href=`${hospital.web}`) Web: #{hospital.web}
                                .description.truncate-3.text-justify.font-Roboto(class='text-[#6F7CB2]') Hotline: #{hospital.phone}
                            .py-4.px-3.content-center
                                //- class of button is butt
                                //- button.w-full.py-2.linearBackground.my-4.text-white.font-DM-Sans.tracking-widest.font-bold.rounded-xl.details.butt Details
                                button.w-full.p-2.linearBackground.text-white.font-DM-Sans.tracking-widest.font-bold.rounded-xl.findway.butt Find Way To Hospital
            .border-4(class='w-1/2 h-[600px]')
                p abcxyz
