extend base

block append header 
    script(defer, type='module' src="/src/doctorsController.js") 

    style(type="text/css").
        .swiper-pagination-bullet {
            background: none !important;
        }

        .swiper-pagination-bullet-active-doctors {
            background: #dfdffb !important;
        }
        
block body
    .flex.flex-col.items-center.my-20
        .pageTitle.linearText.font-ABeeZee.font-bold.text-6xl.my-6 CHAT TO DOCTORS
        if user
            a(href='/chat')
                button.linearBackground.font-DM-Sans.text-white.py-2.w-40.rounded-xl.font-bold.right-60.absolute.cursor-pointer List of chat
        

        .swiper(class='w-4/5').swiper-1.mt-8
            .swiper-wrapper
                each doctor in doctors 
                    a.swiper-slide(class='w-1/4' href=`./doctor/${doctor.slug}`).shadow-xl.newsItem
                        img(src=`./../images/users/profile/${doctor.image}`, class='h-56', alt=`${doctor.slug}-profile` ).w-full.object-cover
                        .py-4.px-3
                            .title.font-Roca.text-xl #{doctor.fullname}
                            .description.truncate-3.text-justify.font-Roboto(class='text-[#6F7CB2]') #{doctor.doctorInfo[0].major}

            .swiper-pagination.swiper-pagination-1
            .swiper-button-prev 
                img(src="./../images/png/blue-left-arrow-svgrepo-com.png", alt="")
            .swiper-button-next
                img(src="./../images/png/blue-right-arrow-svgrepo-com.png", alt="")
